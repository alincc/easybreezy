<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %X %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="io.netty.util.internal.PlatformDependent0" level="INFO"/>
    <logger name="org.jooq.Constants" level="DEBUG"/>
    <logger name="ktor.application" level="DEBUG" />
</configuration>
